<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.siddhartha.com.sqlite.activities.AddActivity"
                android:background="#ffffff">

    <TextView
        android:text="@string/Add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#0673c5"
        android:textStyle="bold"
        android:id="@+id/textView2"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009903"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Name"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Number"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffffff"/>
        </TableRow>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/listView"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#cc1400">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/btn_dlt"
                android:background="#00f6f2ff"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:onClick="btn_dlt"
                android:nestedScrollingEnabled="false"/>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
